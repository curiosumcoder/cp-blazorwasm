@page "/product/details/{id}"
@inject IProductService ps

<h3>Product - Details</h3>

<p></p>

<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @p.ProductName
    </dd>
    <dt class="col-sm-2">
        Unit Price
    </dt>
    <dd class="col-sm-10">
        @p.UnitPrice
    </dd>
</dl>

@code {
    private Product p = new Product();

    [Parameter]
    public string? Id { get; set; }

    protected async override Task OnInitializedAsync()
    {
        if (Id != null)
        {
            p = await ps.Get(Convert.ToInt32(Id));
        }
    }
}
